<UserControl x:Class="MI.Terminal.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid Name="mainGrid">
	<RichTextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
			<FlowDocument  Name="rtbFlowDoc" PageWidth="{Binding ElementName=mainGrid, Path=ActualWidth}" PageHeight="{Binding ElementName=mainGrid, Path=ActualHeight}">
				
		</FlowDocument>
	</RichTextBox>
	</Grid>
</UserControl>
