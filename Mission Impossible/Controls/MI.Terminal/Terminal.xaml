<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:MI.Controls;assembly=MI.Controls" x:Class="MI.Terminal.Terminal" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		
		<TextBox Name="txtTerminal" AcceptsReturn="True" AcceptsTab="True" FontFamily="Consolas" Background="Black" Foreground="White" CaretBrush="Lime" KeyDown="txtTerminal_KeyDown" PreviewKeyDown="txtTerminal_PreviewKeyDown_1" PreviewTextInput="txtTerminal_PreviewTextInput">
			<TextBox.OpacityMask>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</TextBox.OpacityMask>
		</TextBox>
	</Grid>
</UserControl>
